.x-imaging-box {
  position: relative;

  & .x-textarea-container {
    position: absolute;
    z-index: 100;
    background: transparent;
    border: 0;
    resize: none;
    outline: none;
    overflow: hidden;
  }
  & .x-input-container {
    position: absolute;
    & input {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80px;
      height: 30px;
      z-index: 10;
      opacity: 0;
    }
    & a {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80px;
      background: rgba(0, 0, 0, .4);
      border: 1px dashed #fff;
      color: #fff;
      font-size: 12px;
      height: 30px;
      line-height: 30px;
      text-align: center;
      z-index: 1;
    }
  }

  & .x-make-image,
  & .x-again-make-image {
    padding: 5px 20px;
    background: #208fee;
    color: #fff;
    border-radius: 0.2rem;
    cursor: pointer;
    &:hover {
      background: #1182e3;
    }
  }
}
